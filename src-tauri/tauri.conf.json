{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EmulatorX",
  "version": "0.1.0",
  "identifier": "com.emulatorx.app",
  "build": {
    "beforeDevCommand": "set CI=true && yarn dev --port 1420",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "set CI=true && yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "EmulatorX",
        "width": 800,
        "height": 600,
        "decorations": true,
        "label": "EmulatorX"
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://*:1248"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}